{
  "compilerOptions": {
    "outFile": "dist/amd-bundle.js",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
    },
    "types": [
      "node",
      "async",
      "lodash"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "target": "es5",
    "module": "amd",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "allowUnreachableCode": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ]
  },
  "allowJs": true,
  "compileOnSave": false,
  "include": [
    "**/*.js",
    "**/*.ts"
  ],
  "exclude": [
    "test",
    "node_modules",
    "dist"
  ]
}
